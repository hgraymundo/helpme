<%- include ../partials/head %>
<style>
table {
    font-size: 100%;
    font-weight: 300;
    border: 0px;
}
th {
    background-color: #34495e;
    color: #FFF;
    font-weight: 300;
    font-size: 100%;
    border: 0px;
}

tr, .dataTables_info, .dataTables_length, .dataTables_paginate, .dataTables_filter > label {
    color: #34495e;
    font-weight: 300;
    font-size: 80%;
}

</style>
<div class="row ">
        <div class="col col-sm-12">
          <div class="card rounded-0 content">
            <div class="card-header content-title" style="background-color: #2c3e50; padding: 0px;">
              <nav class="navbar navbar-expand-sm navbar-light bg-faded">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#nav-content" aria-controls="nav-content" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>
                <span class="navbar-brand table-title" style="color: #FFF;">Alerts</span>
                <!-- <div class="collapse navbar-collapse justify-content-end" id="nav-content">
                  <ul class="navbar-nav">
                    <li class="nav-item">
                      <a class="btn btn-sm new-button" href="/company/new-product" >
                        <i class="fas fa-plus-circle"></i> New Product
                      </a>
                    </li>
                  </ul>
                </div> -->
              </nav>
            </div>
            <div class="card-body content-table">
              <table id="projects"  class="table table-bordered table-hover table-sm table-striped table-result">
                <thead>
                  <tr>
                    <th class="table_result_title ">Mobile</th>
                    <th class="table_result_title ">Name</th>
                    <th class="table_result_title ">Coordenates</th>
                    <th class="table_result_title ">Date</th>
                    <th class="table_result_title ">Status</th>
                    <th class="table_result_title ">Options</th>
                  </tr>
                </thead>
                <tbody>
                  <%for (var o in result) { %>
                  <tr>
                    <td><%=result[o].user.cellphone%></td>
                    <td><%=result[o].user.firstname%> <%=result[o].user.lastname%> <%=result[o].user.mlastname%></td>
                    <td><%=result[o].lat%>,<%=result[o].lon%></td>
                    <td><%=result[o].createdAt%></td>
                    <td><%=result[o].status%></td>
                    <td class="options">
                      <!-- <a style="padding-right: 4px;" [routerLink]="['/gantt']"><i class="fas fa-chart-line"></i></a> -->
                      <!-- <a style="padding-right: 4px;" [routerLink]="['/edit-project']"><i class="fas fa-edit"></i> </a> -->
                      <!-- <a  class="options " href="#" data-toggle="tooltip" title="Eliminate"><i class="fas fa-trash-alt"></i></a>
                      <a  class="options " href="#" data-toggle="tooltip" title="Edit"><i class="fas fa-edit"></i></a>
                      <a  class="options " href="#" data-toggle="tooltip" title="Configuration"><i class="fas fa-cogs"></i></a> -->
                      <a style="padding-left: 4px;" href="/attend/<%=result[o].uuid%>" data-toggle="tooltip" title="Details"><button>Attend</button>
                      </a>
                    </td>
                  </tr>
                  <%}%>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      <script>
      $(document).ready(function() {
          $('#projects').DataTable({
          });
      } );
      </script>



